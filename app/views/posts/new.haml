%h1 New post

= form_for @post, :html => { class: 'form-horizontal', role: 'form' } do |f|
  = render partial: 'shared/errors', locals: {model: @post}

  .form-group
    = f.label :title, class: 'col-lg-2 control-label'
    .col-lg-10
      = f.text_field :title, class: 'form-control'

  .form-group
    = f.label :body, class: 'col-lg-2 control-label'
    .col-lg-10
      = f.text_area :body, class: 'form-control', rows: 10

  .form-group
    .col-lg-offset-2.col-lg-2
      %button.btn.btn-default.fixed-150{:type=>'submit', :data=>{:disable_with=>'Submitting...'}}
        %span.glyphicon.glyphicon-ok
        Submit

%h1= t '.profile'


= form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: 'form-horizontal', role: 'form', autocomplete: 'off' } do |f|
  = devise_error_messages!

  .form-group
    = f.label :username, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.text_field :username, class: 'form-control', autocomplete: 'off'

  .form-group
    = f.label :real_name, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.text_field :real_name, class: 'form-control', autocomplete: 'off'

  .form-group
    = f.label :password, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.password_field :password, class: 'form-control', :autocomplete => "off"
      %p.help-block
        Don't enter anything here in case you don't want to change the password!

  .form-group
    = f.label :password_confirmation, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off'

  .form-group
    .col-lg-offset-2.col-lg-2
      %button.btn.btn-default.fixed-150{:type=>'submit'}
        %span.glyphicon.glyphicon-ok
        Update